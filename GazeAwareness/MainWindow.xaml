<Window x:Class="GazeAwareness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GazeAwareness"
        IsHitTestVisible="False"
        Topmost="True"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        WindowState="Maximized"
        AllowsTransparency="True" WindowStyle="None"
        >
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Canvas IsHitTestVisible="False">

        <Ellipse x:Name="ellipse1" Width="30" Height="30" Opacity="0.25" Fill="White" Stroke="Black" IsHitTestVisible="False">
            <!--<Ellipse.Effect>
                <DropShadowEffect BlurRadius="50" Opacity="1" ShadowDepth="0" Color="black" ></DropShadowEffect>
            </Ellipse.Effect>-->
        </Ellipse>
    </Canvas>
</Window>
